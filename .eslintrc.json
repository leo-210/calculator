{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-console": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "eqeqeq": "error",
        "require-await": "warn",
        "prettier/prettier": "error",
        "camelcase": "error"
    }
}
